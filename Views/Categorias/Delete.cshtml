@model BlogProgWeb.Models.Categoria

@{
    ViewData["Title"] = "Excluir uma categoria";
}

<h1>@ViewData["Title"]</h1>

<h3>Você tem certeza que deseja excluir a categoria <strong>@Model.Nome</strong>?</h3>
<div>
    <hr />


    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim" class="btn btn-danger" /> |
        <a asp-action="Index">Não</a>
    </form>
</div>
